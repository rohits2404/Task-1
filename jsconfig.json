{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "target": "ESNext",
        "module": "commonjs",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "lib": ["esnext", "dom"],
        "allowJs": true,
        "checkJs": true,
        "noEmit": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}